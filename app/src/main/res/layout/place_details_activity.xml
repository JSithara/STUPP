<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/place_detail_image"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bookstore_1"
        android:text="@string/app_name" />
    <TextView
        android:id="@+id/place_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimaryDark"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/place_detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/colorDarkGrey"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/place_detail_ratings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/colorDarkGrey"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/place_detail_navigate_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="@string/place_navigate"/>
        <Button
            android:id="@+id/place_detail_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_marginHorizontal="18dp"
            android:text="@string/toggle_image"/>
    </LinearLayout>

</LinearLayout>